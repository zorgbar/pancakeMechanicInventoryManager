<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ticketTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ticket Title" />

    <TextView
        android:id="@+id/cartDetailsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cart Details" />

    <Button
        android:id="@+id/hideTicketButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hide Ticket" />

    <!-- Add other necessary views for each ticket item -->

</LinearLayout>
